			<class name="com.simplicia.qaautomation.tests.LoginTests">
				<methods>
					<include name="verifySeConnecterButtonEnabledAfterInputEmailAndPassword"></include>
			</methods> 
			</class>
		</classes>
	</test>
	<test name="Verify the user is login the application successful">
		<classes>
			<class name="com.simplicia.qaautomation.tests.LoginTests">
				<methods>
					<include name="verifyLoginSuccessful"></include>
			</methods> 
			</class>
		</classes>
	</test>
</suite>
